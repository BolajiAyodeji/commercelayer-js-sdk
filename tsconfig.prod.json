{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "ES2016",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom.iterable", "dom"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "helpers"]
}
