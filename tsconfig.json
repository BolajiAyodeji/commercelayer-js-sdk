{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom.iterable", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "helpers"],
  "exclude": ["node_modules"]
}
