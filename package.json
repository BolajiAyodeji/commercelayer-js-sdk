{
  "name": "@commercelayer/js-sdk",
  "version": "2.6.1",
  "description": "Commerce Layer Javascript SDK",
  "repository": {
    "url": "https://github.com/commercelayer/commercelayer-js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/commercelayer/commercelayer-js-sdk/issues"
  },
  "homepage": "https://github.com/commercelayer/commercelayer-js-sdk#readme",
  "author": {
    "name": "Alessandro Casazza",
    "email": "alessandro@commercelayer.io"
  },
  "main": "./dist/index.js",
  "types": "./dist/resources/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:record": "RECORD=true jest",
    "build": "tsdx build --tsconfig ./tsconfig.prod.json --entry ./src/resources/index.ts",
    "build:types": "dts-bundle-generator -o ./dist/types.d.ts ./src/resources/index.ts --project tsconfig.prod.json",
    "watch": "webpack --progress --watch",
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "build:webpack": "rm -rf ./dist && webpack --config webpack.prod.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:patch": "npm run build && npm run version:patch && git push --follow-tags && npm publish --access public",
    "publish:minor": "npm run build && npm run version:minor && git push --follow-tags && npm publish --access public",
    "publish:major": "npm run build && npm run version:major && git push --follow-tags && npm publish --access public"
  },
  "contributors": [
    "Filippo Conforti",
    "Alessandro Casazza",
    "Simone Fiorucci"
  ],
  "license": "MIT",
  "keywords": [
    "jamstack",
    "headless",
    "ecommerce",
    "api"
  ],
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|js|snap)$": "ts-jest"
    },
    "testTimeout": 50000
  },
  "dependencies": {
    "active-resource": "^1.0.0-beta.7"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@commercelayer/js-auth": "^2.0.2",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "babel-loader": "^8.0.6",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "fs": "0.0.2",
    "jest": "^25.1.0",
    "jest-snapshot-parser": "^1.0.0",
    "lodash": "^4.17.15",
    "path": "^0.12.7",
    "rollup-plugin-babel": "^4.3.3",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.12.3",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}
